{
  "title": "Hierarchical VTT v1.0.0",
  "type": "object",
  "required": ["version", "summary", "timeline"],
  "additionalProperties": false,
  "properties": {
    "version": { "type": "string", "enum": ["vtt.hierarchy.v1"] },
    "summary": { "type": "string", "description": "A free-text summary of the video" },
    "timeline": {
      "type": "array",
      "items": { "$ref": "#/$defs/node" },
      "description": "Detailed video timeline transcription in milliseconds"
    }
  },
  "$defs": {
    "base": {
      "type": "object",
      "required": ["kind", "label", "conf", "tags"],
      "properties": {
        "kind": { "type": "string", "enum": ["state", "span", "moment"] },
        "label": { "type": "string", "description": "Semantic title" },
        "description": { "type": "string" },
        "conf": { "type": "number", "minimum": 0, "maximum": 1 },
        "entityIds": { "type": "array", "items": { "type": "string" } },
        "bbox": {
          "type": "array",
          "items": { "type": "number", "minimum": 0, "maximum": 1 },
          "minItems": 4,
          "maxItems": 4,
          "description": "Normalized [x1,y1,x2,y2] bbox"
        },
        "tags": { "type": "array", "items": { "type": "string" } },
        "children": { "type": "array", "items": { "$ref": "#/$defs/node" } }
      }
    },
    "state": {
      "allOf": [
        { "$ref": "#/$defs/base" },
        {
          "type": "object",
          "required": ["start_ms", "end_ms"],
          "properties": {
            "kind": { "const": "state" },
            "start_ms": { "type": "integer" },
            "end_ms": { "type": "integer" },
            "accurate_processing": { "$ref": "#/$defs/accurate_processing" }
          }
        }
      ]
    },
    "span": {
      "allOf": [
        { "$ref": "#/$defs/base" },
        {
          "type": "object",
          "required": ["start_ms", "end_ms"],
          "properties": {
            "kind": { "const": "span" },
            "start_ms": { "type": "integer" },
            "end_ms": { "type": "integer" },
            "accurate_processing": { "$ref": "#/$defs/accurate_processing" }
          }
        }
      ]
    },
    "moment": {
      "allOf": [
        { "$ref": "#/$defs/base" },
        {
          "type": "object",
          "required": ["t_ms"],
          "properties": {
            "kind": { "const": "moment" },
            "t_ms": { "type": "integer" }
          }
        }
      ]
    },
    "node": {
      "oneOf": [
        { "$ref": "#/$defs/state" },
        { "$ref": "#/$defs/span" },
        { "$ref": "#/$defs/moment" }
      ]
    },
    "accurate_processing": {
      "type": "object",
      "required": ["needed", "reason"],
      "additionalProperties": false,
      "properties": {
        "needed": { "type": "boolean" },
        "reason": { "type": "string" }
      }
    }
  }
}
